import java.util.Scanner;
public class punto1 {
		public static void main(String[] args)
		{
		int numero=0;
		Scanner scanner= new Scanner(System.in);
	    System.out.println("ingrese todos los numeros(del 1 al 100): ");
	    numero = scanner.nextInt();
for(int i=numero;i <=100;i++)
{
		    if(i % 2==0)
		    {
		        System.out.println(i+": este numero que ingreso es par");
		    }
}
scanner.close();
		}
	}
